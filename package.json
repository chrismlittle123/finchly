{
  "name": "finchly",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "lint": "pnpm -r lint",
    "conform": "conform check",
    "typecheck": "pnpm -r build",
    "db:generate": "pnpm --filter @finchly/db db:generate",
    "db:migrate": "pnpm --filter @finchly/db db:migrate",
    "db:push": "pnpm --filter @finchly/db db:push",
    "test": "pnpm -r test",
    "prepare": "husky || true"
  },
  "lint-staged": {
    "*.ts": "eslint --max-warnings 0"
  },
  "devDependencies": {
    "@standards-kit/conform": "^0.3.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}
